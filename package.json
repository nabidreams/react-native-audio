{
  "private": true,
  "devDependencies": {
    "husky": "^4.2.5",
    "import-sort-style-module": "^6.0.0",
    "prettier": "^2.0.5",
    "prettier-plugin-import-sort": "^0.0.4",
    "prettier-plugin-package": "^1.0.0",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
